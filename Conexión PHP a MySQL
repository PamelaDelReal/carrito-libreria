<?php
function conectar() {
    $host = "localhost";
    $usuario = "root";
    $clave = "123";
    $bd = "LIBRERIA";

    try {
        $pdo = new PDO("mysql:host=$host;dbname=$bd", $usuario, $clave);
        $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
        return $pdo;
    } catch (PDOException $e) {
        die("Error de conexiÃ³n: " . $e->getMessage());
    }
}
?>
